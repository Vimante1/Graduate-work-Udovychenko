<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Main/css/StyleSheet.css">
    <meta charset="utf-8" />
</head>
<body>
    <header>
        <div class="menuPanel">
            <div class="nav">
                <ul>
                    <li><a href="/route">Головна</a></li>
                    <li>
                        <a href="/route/lessonds">Завдання</a>
                    </li>  @*href="/route/lessonds"*@
                </ul>
                <div class="user">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a href="/route/authorization">Вхід</a>
                    }
                    else
                    {
                        <a href="/route/userpanel">@User.Identity.Name.ToString()</a>
                    }
                    <img class="userimg" src="~/Main/img/user.svg" />
                </div>
            </div>
        </div>
    </header>
    <div class="content">
        @RenderBody()
    </div>
</body>



</html>
